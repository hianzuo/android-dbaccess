<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="100dp">
    <RelativeLayout
        android:id="@+id/ll_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yunpos_toast_flyhand_bg_green"
        android:minHeight="@dimen/yunpos_toast_flyhand_min_height"
        android:minWidth="@dimen/yunpos_toast_flyhand_min_width"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="13dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.flyhand.yunpos.view.FontAwesomeView
                android:id="@+id/fav_logo"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/fa_info_circle"
                android:textColor="@color/white"
                android:textSize="@dimen/yunpos_toast_flyhand_logo_size" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fav_logo"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="message"
                android:textColor="#ffffff"
                android:textSize="@dimen/yunpos_toast_flyhand_text_size" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
